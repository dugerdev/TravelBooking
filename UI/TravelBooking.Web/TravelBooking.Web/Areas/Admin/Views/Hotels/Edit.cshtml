@model TravelBooking.Web.DTOs.Hotels.CreateHotelDto
@{
    ViewData["Title"] = "Edit Hotel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var id = ViewBag.HotelId as Guid? ?? Guid.Empty;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Hotel</h1>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <div class="card shadow mb-4">
        <div class="card-header py-3"><h6 class="m-0 font-weight-bold text-primary">Hotel Details</h6></div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@id" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Name">Name *</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 form-group">
                        <label asp-for="City">City *</label>
                        <input asp-for="City" class="form-control" required />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 form-group">
                        <label asp-for="Country">Country *</label>
                        <input asp-for="Country" class="form-control" required />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="col-12 form-group">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <div class="col-md-2 form-group">
                        <label asp-for="StarRating">Stars</label>
                        <input asp-for="StarRating" type="number" min="1" max="5" class="form-control" />
                    </div>
                    <div class="col-md-2 form-group">
                        <label asp-for="PricePerNight">Price/Night (Otel)</label>
                        <input asp-for="PricePerNight" type="number" step="0.01" min="0" class="form-control" />
                        <small class="text-muted">Referans fiyat</small>
                    </div>
                    <div class="col-md-2 form-group">
                        <label asp-for="StandardRoomPrice">Standart Oda ($)</label>
                        <input asp-for="StandardRoomPrice" type="number" step="0.01" min="0" class="form-control" />
                        <small class="text-muted">Listing'de gösterilir</small>
                    </div>
                    <div class="col-md-2 form-group">
                        <label asp-for="Currency">Currency</label>
                        <input asp-for="Currency" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="ImageUrl">Görsel yolu</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="Örn: /assets/img/oteller/foto.jpg" />
                    </div>
                    <div class="col-12 form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="col-12 form-group">
                        <div class="form-check form-check-inline">
                            <input asp-for="HasFreeWifi" class="form-check-input" />
                            <label asp-for="HasFreeWifi" class="form-check-label">Free WiFi</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="HasParking" class="form-check-input" />
                            <label asp-for="HasParking" class="form-check-label">Parking</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="HasPool" class="form-check-input" />
                            <label asp-for="HasPool" class="form-check-label">Pool</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="HasRestaurant" class="form-check-input" />
                            <label asp-for="HasRestaurant" class="form-check-label">Restaurant</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <a asp-action="Details" asp-route-id="@id" class="btn btn-info">Details</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
