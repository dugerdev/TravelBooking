@model TravelBooking.Web.DTOs.Common.PagedResultDto<TravelBooking.Web.DTOs.Hotels.HotelDto>
@{
    ViewData["Title"] = "Hotels Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Hotels Management</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add New Hotel
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info">@TempData["InfoMessage"]</div>
    }

    <!-- Search Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Search Hotels</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="form-inline">
                <input type="text" name="searchTerm" class="form-control mr-2" placeholder="Search by city or name" value="@ViewBag.SearchTerm">
                <input type="hidden" name="pageNumber" value="1" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    <!-- Hotels Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Hotels</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>City</th>
                            <th>Country</th>
                            <th>Star Rating</th>
                            <th>Price/Night</th>
                            <th>Rating</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Items != null && Model.Items.Any())
                        {
                            foreach (var hotel in Model.Items)
                            {
                                <tr>
                                    <td>@hotel.Name</td>
                                    <td>@hotel.City</td>
                                    <td>@hotel.Country</td>
                                    <td>
                                        @for (int i = 0; i < hotel.StarRating; i++)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                    </td>
                                    <td>@hotel.PricePerNight.ToString("N2") @hotel.Currency</td>
                                    <td>@hotel.Rating.ToString("N1") (@hotel.ReviewCount reviews)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-info btn-sm">Details</a>
                                        <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No hotels found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model != null && Model.TotalPages > 1)
            {
                @await Html.PartialAsync("Partials/_Pagination", new TravelBooking.Web.ViewModels.PaginationViewModel
                {
                    PageNumber = Model.PageNumber,
                    PageSize = Model.PageSize,
                    TotalPages = Model.TotalPages,
                    TotalCount = Model.TotalCount,
                    HasPreviousPage = Model.HasPreviousPage,
                    HasNextPage = Model.HasNextPage,
                    RouteValues = new Dictionary<string, string>
                    {
                        ["searchTerm"] = ViewBag.SearchTerm?.ToString() ?? "",
                        ["minStarRating"] = ViewBag.MinStarRating?.ToString() ?? "",
                        ["maxPrice"] = ViewBag.MaxPrice?.ToString() ?? ""
                    }
                })
            }
        </div>
    </div>
</div>
