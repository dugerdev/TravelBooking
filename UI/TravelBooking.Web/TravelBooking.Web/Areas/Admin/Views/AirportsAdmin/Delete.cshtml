@model TravelBooking.Web.DTOs.Airports.AirportDto
@{
    ViewData["Title"] = "Havalimanı Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Havalimanı Sil</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
    </div>

    @await Html.PartialAsync("_Notifications")

    <div class="card shadow mb-4 border-danger">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="fas fa-exclamation-triangle"></i> Silme Onayı
            </h6>
        </div>
        <div class="card-body">
            <p class="text-danger font-weight-bold">Bu havalimanını silmek istediğinizden emin misiniz?</p>
            <p class="mb-2">Bu işlem geri alınamaz. Havalimanına bağlı uçuşlar varsa silme işlemi başarısız olabilir.</p>
            <table class="table table-bordered table-sm">
                <tr>
                    <th width="120">IATA</th>
                    <td><strong>@Model.IATA_Code</strong></td>
                </tr>
                <tr>
                    <th>Havalimanı Adı</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Şehir</th>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <th>Ülke</th>
                    <td>@Model.Country</td>
                </tr>
            </table>
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Bu havalimanını silmek istediğinizden emin misiniz?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Evet, Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>
