@model TravelBooking.Web.DTOs.Common.PagedResultDto<TravelBooking.Web.DTOs.Flights.FlightDto>
@{
    ViewData["Title"] = "Uçuş Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Uçuş Yönetimi</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Uçuş Ekle
        </a>
    </div>

    @await Html.PartialAsync("_Notifications")

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Uçuşlar</h6>
        </div>
        <div class="card-body">
            @if (Model?.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Uçuş No</th>
                                <th>Havayolu</th>
                                <th>Kalkış</th>
                                <th>Varış</th>
                                <th>Tarih</th>
                                <th>Fiyat</th>
                                <th>Koltuk</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var flight in Model.Items)
                            {
                                <tr>
                                    <td><strong>@flight.FlightNumber</strong></td>
                                    <td>@flight.AirlineName</td>
                                    <td>@(flight.DepartureAirport?.City ?? flight.DepartureAirportName ?? "-") (@(flight.DepartureIATA ?? "-"))</td>
                                    <td>@(flight.ArrivalAirport?.City ?? flight.ArrivalAirportName ?? "-") (@(flight.ArrivalIATA ?? "-"))</td>
                                    <td>@flight.ScheduledDeparture.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@flight.BasePrice?.Amount.ToString("N0") @flight.BasePrice?.Currency</td>
                                    <td>@flight.AvailableSeats / @flight.TotalSeats</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@flight.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@flight.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @await Html.PartialAsync("Partials/_Pagination", new TravelBooking.Web.ViewModels.PaginationViewModel
                {
                    PageNumber = Model.PageNumber,
                    PageSize = Model.PageSize,
                    TotalPages = Model.TotalPages,
                    TotalCount = Model.TotalCount,
                    HasPreviousPage = Model.HasPreviousPage,
                    HasNextPage = Model.HasNextPage,
                    RouteValues = new Dictionary<string, string>()
                })
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Henüz uçuş bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
