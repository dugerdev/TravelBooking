@model TravelBooking.Web.DTOs.Common.PagedResultDto<TravelBooking.Web.DTOs.Tours.TourDto>
@{
    ViewData["Title"] = "Tours Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tours Management</h1>
        <a asp-area="Admin" asp-controller="Tours" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add New Tour
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info">@TempData["InfoMessage"]</div>
    }

    <!-- Search Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Search Tours</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="form-inline">
                <input type="text" name="searchDestination" class="form-control mr-2" placeholder="Destination" value="@ViewBag.SearchDestination">
                <input type="number" name="minDuration" class="form-control mr-2" placeholder="Min days" value="@ViewBag.MinDuration">
                <input type="number" name="maxDuration" class="form-control mr-2" placeholder="Max days" value="@ViewBag.MaxDuration">
                <input type="hidden" name="pageNumber" value="1" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Tours</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Destination</th>
                            <th>Duration</th>
                            <th>Price</th>
                            <th>Rating</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Items != null && Model.Items.Any())
                        {
                            foreach (var tour in Model.Items)
                            {
                                <tr>
                                    <td>@tour.Name</td>
                                    <td>@tour.Destination</td>
                                    <td>@tour.Duration days</td>
                                    <td>@tour.Price.ToString("N2") @tour.Currency</td>
                                    <td>@tour.Rating.ToString("N1")</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Tours" asp-action="Details" asp-route-id="@tour.Id" class="btn btn-info btn-sm">Details</a>
                                        <a asp-area="Admin" asp-controller="Tours" asp-action="Edit" asp-route-id="@tour.Id" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-area="Admin" asp-controller="Tours" asp-action="Delete" asp-route-id="@tour.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No tours found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model != null && Model.TotalPages > 1)
            {
                @await Html.PartialAsync("Partials/_Pagination", new TravelBooking.Web.ViewModels.PaginationViewModel
                {
                    PageNumber = Model.PageNumber,
                    PageSize = Model.PageSize,
                    TotalPages = Model.TotalPages,
                    TotalCount = Model.TotalCount,
                    HasPreviousPage = Model.HasPreviousPage,
                    HasNextPage = Model.HasNextPage,
                    RouteValues = new Dictionary<string, string>
                    {
                        ["searchDestination"] = ViewBag.SearchDestination?.ToString() ?? "",
                        ["minDuration"] = ViewBag.MinDuration?.ToString() ?? "",
                        ["maxDuration"] = ViewBag.MaxDuration?.ToString() ?? ""
                    }
                })
            }
        </div>
    </div>
</div>
