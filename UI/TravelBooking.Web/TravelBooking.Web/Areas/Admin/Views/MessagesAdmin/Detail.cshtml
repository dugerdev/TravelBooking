@model TravelBooking.Web.Models.ContactMessageDetailViewModel
@{
    ViewData["Title"] = "Message Detail";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Message Detail</h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <!-- Message Content -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-envelope"></i>
                        @Model.Message.Subject
                        @if (!Model.Message.IsRead)
                        {
                            <span class="badge badge-danger ml-2">Unread</span>
                        }
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-gray-800"><strong>From:</strong></h6>
                        <p class="mb-1">@Model.Message.Name</p>
                        <p class="mb-1">
                            <i class="fas fa-envelope"></i>
                            <a href="mailto:@Model.Message.Email">@Model.Message.Email</a>
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Message.Phone))
                        {
                            <p class="mb-1">
                                <i class="fas fa-phone"></i>
                                <a href="tel:@Model.Message.Phone">@Model.Message.Phone</a>
                            </p>
                        }
                    </div>

                    <div class="mb-3">
                        <h6 class="text-gray-800"><strong>Date:</strong></h6>
                        <p>@Model.Message.CreatedDate.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <h6 class="text-gray-800"><strong>Message:</strong></h6>
                        <div class="p-3 bg-light border rounded">
                            <p style="white-space: pre-wrap;">@Model.Message.Message</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Message.Response))
                    {
                        <hr />
                        <div class="mb-3">
                            <h6 class="text-gray-800"><strong>Your Response:</strong></h6>
                            <div class="p-3 bg-success text-white border rounded">
                                <p style="white-space: pre-wrap;">@Model.Message.Response</p>
                                <small class="text-white-50">
                                    Responded on @Model.Message.ResponseDate?.ToString("MMMM dd, yyyy 'at' HH:mm")
                                </small>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Response Form -->
            @if (string.IsNullOrEmpty(Model.Message.Response))
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-reply"></i>
                            Add Response
                        </h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddResponse" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Message.Id" />
                            
                            <div class="form-group">
                                <label for="responseText">Response Message:</label>
                                <textarea name="responseText" id="responseText" class="form-control" rows="5" placeholder="Type your response here..." required></textarea>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane"></i> Send Response
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="document.getElementById('responseText').value=''">
                                    <i class="fas fa-eraser"></i> Clear
                                </button>
                            </div>

                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Note:</strong> The response will be saved here. To send an email, use the "Reply via Email" button.
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- Actions Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="mailto:@Model.Message.Email?subject=Re: @Model.Message.Subject" class="list-group-item list-group-item-action">
                            <i class="fas fa-reply"></i> Reply via Email
                        </a>
                        
                        @if (!Model.Message.IsRead)
                        {
                            <form asp-action="MarkAsRead" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Message.Id" />
                                <button type="submit" class="list-group-item list-group-item-action btn-link text-left">
                                    <i class="fas fa-check"></i> Mark as Read
                                </button>
                            </form>
                        }

                        <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this message?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Message.Id" />
                            <button type="submit" class="list-group-item list-group-item-action list-group-item-danger btn-link text-left">
                                <i class="fas fa-trash"></i> Delete Message
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Message Info -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Message Info</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>ID:</strong><br />
                        <small class="text-muted">@Model.Message.Id</small>
                    </p>
                    <p class="mb-2">
                        <strong>Received:</strong><br />
                        @Model.Message.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                    </p>
                    @if (Model.Message.IsRead && Model.Message.ReadDate.HasValue)
                    {
                        <p class="mb-2">
                            <strong>Read:</strong><br />
                            @Model.Message.ReadDate.Value.ToString("MMM dd, yyyy HH:mm")
                            @if (!string.IsNullOrEmpty(Model.Message.ReadBy))
                            {
                                <br />
                                <small class="text-muted">by @Model.Message.ReadBy</small>
                            }
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
