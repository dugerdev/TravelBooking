@model TravelBooking.Web.Models.ContactMessageListViewModel
@{
    ViewData["Title"] = "Contact Messages";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Contact Messages</h1>
        <span class="badge badge-danger badge-pill" style="font-size: 1.2rem;">
            @Model.UnreadCount Unread
        </span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filters</h6>
        </div>
        <div class="card-body">
            <form method="get" asp-area="Admin" asp-controller="MessagesAdmin" asp-action="Index" class="form-inline">
                <div class="form-group mr-3">
                    <label for="status" class="mr-2">Status:</label>
                    <select name="status" id="status" class="form-control" onchange="this.form.submit()">
                        <option value="">All</option>
                        <option value="unread" selected="@(Model.StatusFilter == "unread")">Unread</option>
                        <option value="read" selected="@(Model.StatusFilter == "read")">Read</option>
                    </select>
                </div>
                <div class="form-group mr-3">
                    <label for="search" class="mr-2">Search:</label>
                    <input type="text" name="search" id="search" class="form-control" placeholder="Name, email, subject..." value="@Model.SearchQuery" />
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(Model.StatusFilter) || !string.IsNullOrEmpty(Model.SearchQuery))
                {
                    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </form>
        </div>
    </div>

    <!-- Messages Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Messages (@Model.TotalCount total)
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Messages.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="5%">Status</th>
                                <th width="15%">Name</th>
                                <th width="15%">Email</th>
                                <th width="20%">Subject</th>
                                <th width="15%">Date</th>
                                <th width="30%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var message in Model.Messages)
                            {
                                <tr class="@(message.IsRead ? "" : "table-warning")">
                                    <td class="text-center">
                                        @if (message.IsRead)
                                        {
                                            <i class="fas fa-envelope-open text-success" title="Read"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-envelope text-danger" title="Unread"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (!message.IsRead)
                                        {
                                            <strong>@message.Name</strong>
                                        }
                                        else
                                        {
                                            @message.Name
                                        }
                                    </td>
                                    <td>
                                        <a href="mailto:@message.Email">@message.Email</a>
                                    </td>
                                    <td>
                                        @if (!message.IsRead)
                                        {
                                            <strong>@message.Subject</strong>
                                        }
                                        else
                                        {
                                            @message.Subject
                                        }
                                    </td>
                                    <td>
                                        <small>@message.CreatedDate.ToString("MMM dd, yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Detail", new { id = message.Id })" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        @if (!message.IsRead)
                                        {
                                            <form asp-action="MarkAsRead" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@message.Id" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-check"></i> Mark Read
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@message.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    No messages found.
                </div>
            }
        </div>
    </div>

</div>
<!-- /.container-fluid -->
