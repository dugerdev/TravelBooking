@model TravelBooking.Web.ViewModels.Admin.EditFlightViewModel
@{
    ViewData["Title"] = "Uçuş Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Uçuş Düzenle</h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
    </div>

    @await Html.PartialAsync("_Notifications")
    @await Html.PartialAsync("_ValidationSummary")

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Uçuş Bilgilerini Düzenle</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" data-loading="true">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="FlightNumber">Uçuş Numarası</label>
                            <input asp-for="FlightNumber" class="form-control" readonly />
                            <small class="form-text text-muted">Uçuş numarası değiştirilemez</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="AirlineName">Havayolu</label>
                            <input asp-for="AirlineName" class="form-control" readonly />
                            <small class="form-text text-muted">Havayolu değiştirilemez</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="ScheduledDeparture">Kalkış Tarihi ve Saati</label>
                            <input asp-for="ScheduledDeparture" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ScheduledDeparture" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ScheduledArrival">Varış Tarihi ve Saati</label>
                            <input asp-for="ScheduledArrival" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ScheduledArrival" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Şu anda sadece uçuş saatleri güncellenebilir. Diğer bilgiler için API'yi kullanın.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
