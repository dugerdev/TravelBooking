@model TravelBooking.Web.DTOs.Common.PagedResultDto<TravelBooking.Web.DTOs.Reservations.ReservationDto>
@using TravelBooking.Web.DTOs.Enums
@using TravelBooking.Web.Helpers
@{
    ViewData["Title"] = "Rezervasyon Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var currentStatus = ViewBag.CurrentStatus as string;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Yönetimi</h1>
    </div>

    @await Html.PartialAsync("_Notifications")

    <!-- Search and Filter -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="searchTerm" class="font-weight-bold">Arama</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                   value="@ViewBag.SearchTerm" 
                                   placeholder="PNR veya kullanıcı adı ile ara...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="status" class="font-weight-bold">Durum</label>
                            <select name="status" id="status" class="form-control">
                                <option value="">Tümü</option>
                                <option value="Pending" selected="@(currentStatus == "Pending")">Beklemede</option>
                                <option value="Confirmed" selected="@(currentStatus == "Confirmed")">Onaylandı</option>
                                <option value="Cancelled" selected="@(currentStatus == "Cancelled")">İptal Edildi</option>
                                <option value="Completed" selected="@(currentStatus == "Completed")">Tamamlandı</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="reservationType" class="font-weight-bold">Rezervasyon Türü</label>
                            <select name="reservationType" id="reservationType" class="form-control">
                                <option value="">Tümü</option>
                                <option value="Flight" selected="@(ViewBag.ReservationType == "Flight")">Uçuş</option>
                                <option value="Hotel" selected="@(ViewBag.ReservationType == "Hotel")">Otel</option>
                                <option value="Car" selected="@(ViewBag.ReservationType == "Car")">Araba</option>
                                <option value="Tour" selected="@(ViewBag.ReservationType == "Tour")">Tur</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="d-block">&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-search"></i> Ara
                            </button>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || !string.IsNullOrEmpty(currentStatus) || !string.IsNullOrEmpty(ViewBag.ReservationType as string))
                {
                    <div class="row">
                        <div class="col-12">
                            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-times"></i> Filtreleri Temizle
                            </a>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Rezervasyonlar</h6>
        </div>
        <div class="card-body">
            @if (Model?.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 100px;">PNR</th>
                                <th style="width: 150px;">Kullanıcı</th>
                                <th style="width: 120px;">Rezervasyon Türü</th>
                                <th style="width: 200px;">Detay</th>
                                <th style="width: 130px;">Toplam Fiyat</th>
                                <th style="width: 150px;">Durum</th>
                                <th style="width: 130px;">Ödeme</th>
                                <th style="width: 140px;">Tarih</th>
                                <th style="width: 150px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model.Items)
                            {
                                var isCancelled = reservation.Status == ReservationStatus.Cancelled;
                                var typeIcon = reservation.ReservationType == ReservationType.Flight ? "fa-plane" : 
                                               reservation.ReservationType == ReservationType.Hotel ? "fa-hotel" : 
                                               reservation.ReservationType == ReservationType.Car ? "fa-car" : "fa-map-marked-alt";
                                var typeText = reservation.ReservationType == ReservationType.Flight ? "Uçuş" : 
                                               reservation.ReservationType == ReservationType.Hotel ? "Otel" : 
                                               reservation.ReservationType == ReservationType.Car ? "Araba" : "Tur";
                                var typeColor = reservation.ReservationType == ReservationType.Flight ? "primary" : 
                                                reservation.ReservationType == ReservationType.Hotel ? "info" : 
                                                reservation.ReservationType == ReservationType.Car ? "success" : "warning";
                                
                                <tr class="@(isCancelled ? "table-danger" : "")">
                                    <td><strong class="text-primary">@reservation.PNR</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(reservation.UserName))
                                        {
                                            <span class="font-weight-bold">@reservation.UserName</span>
                                        }
                                        else
                                        {
                                            <small class="text-muted">@(string.IsNullOrEmpty(reservation.AppUserId) ? "-" : (reservation.AppUserId.Length >= 8 ? reservation.AppUserId.Substring(0, 8) + "..." : reservation.AppUserId))</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge badge-@typeColor">
                                            <i class="fas @typeIcon"></i> @typeText
                                        </span>
                                    </td>
                                    <td style="max-width: 200px;" class="text-left" title="@(reservation.ReservationType == ReservationType.Flight ? AirportDisplayHelper.GetRouteDisplay(reservation.ReservationSummary) : (reservation.ReservationSummary ?? "-"))">
                                        <small class="text-muted text-truncate d-inline-block" style="max-width: 200px;">
                                            @if (reservation.ReservationType == ReservationType.Flight && !string.IsNullOrWhiteSpace(reservation.ReservationSummary))
                                            {
                                                @AirportDisplayHelper.GetRouteDisplay(reservation.ReservationSummary)
                                            }
                                            else
                                            {
                                                @(reservation.ReservationSummary ?? "-")
                                            }
                                        </small>
                                    </td>
                                    <td><strong>@reservation.TotalPrice.ToString("N2") @reservation.Currency</strong></td>
                                    <td>
                                        @if (reservation.Status == ReservationStatus.Pending)
                                        {
                                            <span class="badge badge-warning badge-pill">
                                                <i class="fas fa-clock"></i> Beklemede
                                            </span>
                                        }
                                        else if (reservation.Status == ReservationStatus.Confirmed)
                                        {
                                            <span class="badge badge-success badge-pill">
                                                <i class="fas fa-check-circle"></i> Onaylandı
                                            </span>
                                        }
                                        else if (reservation.Status == ReservationStatus.Cancelled)
                                        {
                                            <span class="badge badge-danger badge-pill">
                                                <i class="fas fa-ban"></i> Rezervasyon İptal Edildi
                                            </span>
                                        }
                                        else if (reservation.Status == ReservationStatus.Completed)
                                        {
                                            <span class="badge badge-info badge-pill">
                                                <i class="fas fa-check-double"></i> Tamamlandı
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@reservation.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (reservation.PaymentStatus == PaymentStatus.Paid)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check"></i> Ödendi
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-exclamation-triangle"></i> Ödenmedi
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@reservation.CreatedDate.ToString("dd/MM/yyyy")</small><br/>
                                        <small class="text-muted">@reservation.CreatedDate.ToString("HH:mm")</small>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@reservation.Id" 
                                           class="btn btn-sm btn-info mr-1" 
                                           title="Detayları Görüntüle">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (reservation.Status != ReservationStatus.Cancelled)
                                        {
                                            <form asp-action="Cancel" asp-route-id="@reservation.Id" method="post" class="d-inline" onsubmit="return confirm('Bu rezervasyonu silmek (iptal etmek) istediğinize emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" title="Rezervasyonu Sil (İptal Et)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @await Html.PartialAsync("Partials/_Pagination", new TravelBooking.Web.ViewModels.PaginationViewModel
                {
                    PageNumber = Model.PageNumber,
                    PageSize = Model.PageSize,
                    TotalPages = Model.TotalPages,
                    TotalCount = Model.TotalCount,
                    HasPreviousPage = Model.HasPreviousPage,
                    HasNextPage = Model.HasNextPage,
                    RouteValues = new Dictionary<string, string>
                    {
                        ["status"] = ViewBag.CurrentStatus?.ToString() ?? "",
                        ["searchTerm"] = ViewBag.SearchTerm?.ToString() ?? "",
                        ["reservationType"] = ViewBag.ReservationType?.ToString() ?? ""
                    }
                })
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    @(string.IsNullOrEmpty(currentStatus) ? "Henüz rezervasyon bulunmamaktadır." : $"{currentStatus} durumunda rezervasyon bulunmamaktadır.")
                </div>
            }
        </div>
    </div>
</div>
