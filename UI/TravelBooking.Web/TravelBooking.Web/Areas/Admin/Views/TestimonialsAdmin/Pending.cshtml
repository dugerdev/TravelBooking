@model List<TravelBooking.Web.DTOs.Testimonials.TestimonialDto>
@{
    ViewData["Title"] = "Pending Testimonials";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Pending Testimonials</h1>
        <div>
            <a href="@Url.Action("Index", "TestimonialsAdmin")" class="btn btn-primary btn-sm">
                <i class="fas fa-list"></i> View All
            </a>
            <button type="button" class="btn btn-success btn-sm" id="bulkApproveBtn" style="display:none;">
                <i class="fas fa-check"></i> Approve Selected
            </button>
        </div>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.ErrorMessage
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div id="alertContainer"></div>

    <!-- Pending Testimonials -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-warning">
                <i class="fas fa-clock"></i> Awaiting Approval (@Model.Count)
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var testimonial in Model.OrderBy(t => t.CreatedDate))
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card border-warning h-100">
                                <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                                    <div>
                                        <input type="checkbox" class="testimonial-checkbox mr-2" data-id="@testimonial.Id" />
                                        <strong>@testimonial.CustomerName</strong>
                                        <small class="ml-2">(@testimonial.Location)</small>
                                    </div>
                                    <div>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= testimonial.Rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@testimonial.Comment</p>
                                    <p class="text-muted mb-0">
                                        <small><i class="fas fa-calendar"></i> Submitted: @testimonial.CreatedDate.ToString("dd MMM yyyy HH:mm")</small>
                                    </p>
                                </div>
                                <div class="card-footer bg-light d-flex justify-content-between">
                                    <button type="button" class="btn btn-success btn-sm btn-approve" data-id="@testimonial.Id">
                                        <i class="fas fa-check"></i> Approve
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm btn-reject" data-id="@testimonial.Id">
                                        <i class="fas fa-times"></i> Reject
                                    </button>
                                    <button type="button" class="btn btn-outline-danger btn-sm btn-delete" data-id="@testimonial.Id">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h5 class="text-muted">No pending testimonials!</h5>
                    <p class="text-muted">All testimonials have been reviewed.</p>
                </div>
            }
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Checkbox handling
            $('.testimonial-checkbox').on('change', function () {
                toggleBulkActions();
            });

            function toggleBulkActions() {
                var checkedCount = $('.testimonial-checkbox:checked').length;
                if (checkedCount > 0) {
                    $('#bulkApproveBtn').show();
                } else {
                    $('#bulkApproveBtn').hide();
                }
            }

            // Bulk approve
            $('#bulkApproveBtn').on('click', function () {
                var ids = [];
                $('.testimonial-checkbox:checked').each(function () {
                    ids.push($(this).data('id'));
                });

                if (ids.length === 0) {
                    showAlert('warning', 'Please select testimonials to approve.');
                    return;
                }

                if (confirm('Are you sure you want to approve ' + ids.length + ' testimonial(s)?')) {
                    bulkApprove(ids);
                }
            });

            // Approve single
            $('.btn-approve').on('click', function () {
                var id = $(this).data('id');
                if (confirm('Are you sure you want to approve this testimonial?')) {
                    approveTestimonial(id);
                }
            });

            // Reject single
            $('.btn-reject').on('click', function () {
                var id = $(this).data('id');
                var reason = prompt('Rejection reason (optional):');
                if (confirm('Are you sure you want to reject this testimonial?')) {
                    rejectTestimonial(id, reason);
                }
            });

            // Delete
            $('.btn-delete').on('click', function () {
                var id = $(this).data('id');
                if (confirm('Are you sure you want to delete this testimonial? This action cannot be undone.')) {
                    deleteTestimonial(id);
                }
            });

            function approveTestimonial(id) {
                $.post('@Url.Action("Approve", "TestimonialsAdmin")', { id: id }, function (response) {
                    if (response.success) {
                        showAlert('success', response.message);
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showAlert('danger', response.message);
                    }
                });
            }

            function rejectTestimonial(id, reason) {
                $.post('@Url.Action("Reject", "TestimonialsAdmin")', { id: id, reason: reason }, function (response) {
                    if (response.success) {
                        showAlert('success', response.message);
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showAlert('danger', response.message);
                    }
                });
            }

            function deleteTestimonial(id) {
                $.post('@Url.Action("Delete", "TestimonialsAdmin")', { id: id }, function (response) {
                    if (response.success) {
                        showAlert('success', response.message);
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showAlert('danger', response.message);
                    }
                });
            }

            function bulkApprove(ids) {
                $.ajax({
                    url: '@Url.Action("BulkApprove", "TestimonialsAdmin")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(ids),
                    success: function (response) {
                        if (response.success) {
                            showAlert('success', response.message);
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showAlert('danger', response.message);
                        }
                    }
                });
            }

            function showAlert(type, message) {
                var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                    message +
                    '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                    '<span aria-hidden="true">&times;</span>' +
                    '</button>' +
                    '</div>';
                $('#alertContainer').html(alertHtml);
            }
        });
    </script>
}
