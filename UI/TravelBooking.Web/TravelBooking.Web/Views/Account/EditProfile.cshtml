@model TravelBooking.Web.ViewModels.Account.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Title-Banner Start -->
<div class="title-banner">
    <div class="container-fluid">
        <div class="row">
            <div class="banner-area v-2">
                <img src="~/assets/img/vacation.svg" alt="" class="left-image">
                <div class="content-box text-alignment">
                    <h1 class="fw-700 lightest-black">Edit Profile</h1>
                </div>
                <img src="~/assets/img/plane.svg" alt="" class="right-image">
            </div>
        </div>
    </div>
</div>
<!-- Title-Banner End -->

<!-- Main Content Start -->
<div class="page-content m-0">
    <section class="account-section mb-60 mt-60">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10">
                    <div class="card shadow-sm">
                        <div class="card-body p-40">
                            @await Html.PartialAsync("_Notifications")
                            @await Html.PartialAsync("_ValidationSummary")

                            <form asp-action="EditProfile" method="post" data-loading="true">
                                @Html.AntiForgeryToken()

                                <div class="mb-24">
                                    <label asp-for="UserName" class="form-label">Username</label>
                                    <div class="form-field-with-icon">
                                        <i class="fa fa-user"></i>
                                        <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                                    </div>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="mb-24">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <div class="form-field-with-icon">
                                        <i class="fa fa-envelope"></i>
                                        <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-32">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <div class="form-field-with-icon">
                                        <i class="fa fa-phone"></i>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="d-flex gap-16">
                                    <button type="submit" class="cus-btn w-100">
                                        <i class="fa fa-save me-2"></i>
                                        Save
                                    </button>
                                    <a asp-action="Profile" class="cus-btn btn-sec w-100">
                                        <i class="fa fa-times me-2"></i>
                                        Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Main Content End -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
