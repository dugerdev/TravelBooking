@model TravelBooking.Web.ViewModels.Account.ChangePasswordViewModel
@{
    ViewData["Title"] = "Sifre Degistir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Title-Banner Start -->
<div class="title-banner">
    <div class="container-fluid">
        <div class="row">
            <div class="banner-area v-2">
                <img src="~/assets/img/vacation.svg" alt="" class="left-image">
                <div class="content-box text-alignment">
                    <h1 class="fw-700 lightest-black">Change Password</h1>
                </div>
                <img src="~/assets/img/plane.svg" alt="" class="right-image">
            </div>
        </div>
    </div>
</div>
<!-- Title-Banner End -->

<!-- Main Content Start -->
<div class="page-content m-0">
    <section class="account-section mb-60 mt-60">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10">
                    <div class="card shadow-sm">
                        <div class="card-body p-40">
                            @await Html.PartialAsync("_Notifications")
                            @await Html.PartialAsync("_ValidationSummary")

                            <div class="alert alert-info mb-24">
                                <i class="fa fa-info-circle me-2"></i>
                                Your password must be at least 6 characters and contain uppercase, lowercase and number.
                            </div>

                            <form asp-action="ChangePassword" method="post" data-loading="true">
                                @Html.AntiForgeryToken()

                                <div class="mb-24">
                                    <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                                    <div class="form-field-with-icon">
                                        <i class="fa fa-lock"></i>
                                        <input asp-for="CurrentPassword" class="form-control" placeholder="Enter your current password" />
                                    </div>
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>

                                <div class="mb-24">
                                    <label asp-for="NewPassword" class="form-label">New Password</label>
                                    <div class="form-field-with-icon">
                                        <i class="fa fa-lock"></i>
                                        <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" />
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>

                                <div class="mb-32">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                                    <div class="form-field-with-icon">
                                        <i class="fa fa-lock"></i>
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter your new password" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="d-flex gap-16">
                                    <button type="submit" class="cus-btn w-100">
                                        <i class="fa fa-key me-2"></i>
                                        Change Password
                                    </button>
                                    <a asp-action="Profile" class="cus-btn btn-sec w-100">
                                        <i class="fa fa-times me-2"></i>
                                        Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Main Content End -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
