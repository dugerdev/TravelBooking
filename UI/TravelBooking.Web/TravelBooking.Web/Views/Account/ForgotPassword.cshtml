@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<div class="page-content m-0">
    <section class="signup bg-white">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-5 col-md-9 col-sm-10 p-0">
                <div class="container-fluid">
                    <div class="form-block">
                        <a asp-controller="Account" asp-action="Login" class="color-primary h6 mb-30">
                            <i class="fal fa-chevron-left"></i>&nbsp;&nbsp;Back to Login Page
                        </a>
                        <h2 class="mb-16 light-black">Forgot Password</h2>
                        <p class="color-medium-gray mb-30">Enter your email address and we'll send you a password reset link.</p>
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <form method="post" asp-controller="Account" asp-action="ForgotPassword" class="form-group contact-form">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="mb-24">
                                        <label class="form-label">Email Address</label>
                                        <input type="email" name="email" class="form-control" placeholder="example@email.com" required />
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="cus-btn small-pad mb-24">
                                        <i class="far fa-envelope me-2"></i>Send Link
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="text-center mt-24">
                            <p class="color-medium-gray">
                                Remember your password? 
                                <a asp-controller="Account" asp-action="Login" class="color-primary fw-bold">Login</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 p-0">
                <div class="img-block">
                    <img src="~/assets/img/inner-banner-1.png" alt="">
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
