@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.tabs .tab').forEach(function(tab) {
        tab.addEventListener('click', function() {
            var target = this.getAttribute('data-tab');
            document.querySelectorAll('.tabs .tab').forEach(function(t) { t.classList.remove('active'); });
            document.querySelectorAll('.tab-content').forEach(function(c) { c.classList.remove('active'); });
            this.classList.add('active');
            var content = document.getElementById('tab-' + target);
            if (content) content.classList.add('active');
        });
    });
});
</script>
}

<!-- hero section -->
<section class="hero-section">
    <div class="content" data-aos="fade-right" data-aos-duration="1300">
        <h1 class="user-info" style="height: 80px;"></h1>
        <div>
            <h1><span>Book</span> Your Dream <span>Travel</span> Now!</h1>
            <p>Discover the best deals on flights, cars and hotels. Compare prices, book easily, and travel with confidence. Your dream journey starts here.</p>
            <button class="book-btn" onclick="openBookPage()">Book Now</button>
        </div>
    </div>
    <img src="~/assets/img/flynow/plane.png" alt="Plane" data-aos="fade-up-left" data-aos-duration="1300" class="plane">
</section>

<!-- Booking Section -->
<section class="booking-section-home" id="booking-section">
    <div class="booking-section">
        <div class="tabs">
            <button type="button" class="tab active" data-tab="flights"><i class="fa fa-plane"></i> Flights</button>
            <button type="button" class="tab" data-tab="cars"><i class="fa fa-car"></i> Cars</button>
            <button type="button" class="tab" data-tab="hotels"><i class="fa fa-hotel"></i> Hotels</button>
        </div>

        <div id="tab-flights" class="tab-content active">
        <form class="booking-form" action="/Flight/SearchFlights" method="get">
            <div class="trip-type">
                <label><input type="radio" name="way" value="one-way" checked> One way</label>
                <label><input type="radio" name="way" value="round-trip"> Round-trip</label>
            </div>

            <div class="form-row">
                <input type="text" name="fromCity" placeholder="From (Select City)" style="border: none;">
                <input type="text" name="toCity" placeholder="To (Select City)">
                <label>&nbsp; Departure <br>
                    <input type="date" name="departureDate" value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")">
                </label>
                <label id="returnDateLabel"> &nbsp; Return <br>
                    <input type="date" id="returnDate" name="returnDate" value="@DateTime.Now.AddDays(14).ToString("yyyy-MM-dd")">
                </label>
                <input type="text" name="adultCount" placeholder="Passengers" value="1">
            </div>

            <div class="class-type">
                <h3>Class</h3>
                <label><input type="radio" name="cabinClass" value="Economy" checked> Economy</label>
                <label><input type="radio" name="cabinClass" value="Business"> Business</label>
            </div>

            <div class="promo">
                <input type="text" placeholder="Enter Promo Code" name="promoCode">
                <button type="submit" class="show-flight"><i class="fa fa-plane"></i> Search Flights</button>
            </div>
        </form>
        </div>

        <div id="tab-cars" class="tab-content">
        <form class="booking-form" action="/Car/Listing" method="get">
            <div class="form-row">
                <input type="text" name="location" placeholder="Pick-up location" required>
                <label>&nbsp; Pick-up Date <br>
                    <input type="date" name="pickupDate" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")">
                </label>
                <label> &nbsp; Return Date <br>
                    <input type="date" name="returnDate" value="@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")">
                </label>
            </div>
            <div class="promo">
                <button type="submit" class="show-flight"><i class="fa fa-car"></i> Search Cars</button>
            </div>
        </form>
        </div>

        <div id="tab-hotels" class="tab-content">
        <form class="booking-form" action="/Hotel/Listing" method="get">
            <div class="form-row">
                <input type="text" name="city" placeholder="City or region (e.g. Istanbul, Antalya)">
            </div>
            <div class="promo">
                <button type="submit" class="show-flight"><i class="fa fa-hotel"></i> Search Hotels</button>
            </div>
        </form>
        </div>
    </div>
