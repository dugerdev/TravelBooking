@model TravelBooking.Web.ViewModels.ReservationPieChartViewModel
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.Title</h6>
    </div>
    <div class="card-body">
        <div class="chart-pie pt-4">
            <canvas id="@Model.CanvasId" height="280"></canvas>
        </div>
        <div class="mt-4 text-center small text-muted">
            <span class="mr-2"><i class="fas fa-circle text-warning"></i> Beklemede</span>
            <span class="mr-2"><i class="fas fa-circle text-success"></i> Onaylandı</span>
            <span class="mr-2"><i class="fas fa-circle text-danger"></i> İptal</span>
            <span class="mr-2"><i class="fas fa-circle text-primary"></i> Tamamlandı</span>
        </div>
    </div>
</div>
