@* Notifications Component for TempData Messages *@

@if (TempData["Success"] != null || TempData["BookingSuccess"] != null || TempData["ContactSuccess"] != null)
{
    var message = TempData["Success"]?.ToString() ?? TempData["BookingSuccess"]?.ToString() ?? TempData["ContactSuccess"]?.ToString();
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <strong>Success!</strong> @message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null || TempData["BookingError"] != null || TempData["ReservationError"] != null)
{
    var message = TempData["Error"]?.ToString() ?? TempData["BookingError"]?.ToString() ?? TempData["ReservationError"]?.ToString();
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <strong>Hata!</strong> @message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning!</strong> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Info"] != null || TempData["BookingMessage"] != null)
{
    var message = TempData["Info"]?.ToString() ?? TempData["BookingMessage"]?.ToString();
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Info:</strong> @message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<style>
    .alert {
        animation: slideInDown 0.3s ease-out;
        margin-bottom: 1rem;
    }

    @@keyframes slideInDown {
        from {
            transform: translateY(-20px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

<script>
    // Auto-dismiss alerts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
        const alerts = document.querySelectorAll('.alert-dismissible');
        alerts.forEach(alert => {
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }, 5000);
        });
    });
</script>
