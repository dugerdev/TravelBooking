 <!-- Mobile Menu Start -->
<div class="mobile-nav__wrapper">
    <div class="mobile-nav__overlay mobile-nav__toggler"></div>
    <div class="mobile-nav__content">
        <span class="mobile-nav__close mobile-nav__toggler"></span>
        <div class="logo-box">
            <a asp-controller="Home" asp-action="Index " aria-label="logo image"><img src="~/assets/img/logo.png" alt="" class="invisible"></a>
        </div>
        <div class="mobile-nav__container"></div>         <div class="mobile-nav__auth" style="padding: 10px 30px;">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <span style="color: #fff; margin-right: 15px;">@User.Identity.Name</span>
                <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link p-0" style="color: #fff;"><i class="fas fa-sign-out-alt"></i> Cikis</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" style="color: #fff; margin-right: 15px;"><i class="fas fa-user"></i> Login</a>
                <a asp-controller="Account" asp-action="SignUp" style="color: #fff;"><i class="fas fa-user-plus"></i> Sign Up</a>
            }
        </div>


        <ul class="mobile-nav__contact list-unstyled">
            <li>
                <i class="fas fa-envelope"></i>
                <a href="mailto:example@company.com">example@company.com</a>
            </li>
            <li>
                <i class="fa fa-phone-alt"></i>
                <a href="tel:+12345678">+123 (4567) -890</a>
            </li>
        </ul>
        <!-- <div class="mobile-nav__social">
          <a href="https://twitter.com/"><i class="fab fa-twitter"></i></a>
          <a href="https://www.facebook.com/"><i class="fab fa-facebook"></i></a>
          <a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a>
        </div> -->
    </div>
</div>
<!-- Mobile Menu End -->