@* Loading Spinner Component *@
<div class="loading-spinner-overlay" id="loadingSpinner" style="display: none;">
    <div class="loading-spinner-container">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-white">@(ViewBag.LoadingMessage ?? "Yukleniyor...")</p>
    </div>
</div>

<style>
    .loading-spinner-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 9999;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .loading-spinner-container {
        text-align: center;
    }
</style>

<script>
    // Global loading spinner functions
    window.showLoadingSpinner = function(message) {
        const spinner = document.getElementById('loadingSpinner');
        if (spinner) {
            if (message) {
                const messageEl = spinner.querySelector('p');
                if (messageEl) messageEl.textContent = message;
            }
            spinner.style.display = 'flex';
        }
    };

    window.hideLoadingSpinner = function() {
        const spinner = document.getElementById('loadingSpinner');
        if (spinner) {
            spinner.style.display = 'none';
        }
    };

    // Show spinner on form submit
    document.addEventListener('DOMContentLoaded', function() {
        const forms = document.querySelectorAll('form[data-loading="true"]');
        forms.forEach(form => {
            form.addEventListener('submit', function() {
                showLoadingSpinner('Isleminiz gerceklestiriliyor...');
            });
        });
    });
</script>
