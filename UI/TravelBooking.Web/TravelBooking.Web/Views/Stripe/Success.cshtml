@{
    ViewData["Title"] = "Payment Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var status = ViewBag.PaymentStatus as string ?? "paid";
    var amount = ViewBag.AmountTotal as decimal? ?? 0;
    var currency = ViewBag.Currency as string ?? "TRY";
}

<div class="title-banner mb-20">
    <div class="container-fluid">
        <div class="row">
            <div class="banner-area">
                <div class="content-box text-alignment">
                    <h1 class="fw-700 lightest-black">Odeme Basarili</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content m-0">
    <section class="flight-booking">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm p-4">
                        <div class="card-body text-center">
                            <div class="mb-4">
                                <i class="fa fa-check-circle text-success" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="h4 text-success mb-3">Your payment has been received</h2>
                            <p class="text-muted mb-2">Your payment was successfully completed through Stripe.</p>
                            @if (amount > 0)
                            {
                                <p class="fw-600 mb-4">Amount: @amount.ToString("N2") @currency</p>
                            }
                            <a asp-controller="Account" asp-action="MyReservations" class="btn btn-primary">
                                <i class="fa fa-list me-2"></i>My Reservations
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <i class="fa fa-home me-2"></i>Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
