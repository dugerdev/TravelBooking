@model TravelBooking.Web.ViewModels.Flights.FlightStatusViewModel
@{
    ViewData["Title"] = "Flight Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Title-Banner Start -->
<div class="title-banner">
    <div class="container-fluid">
        <div class="row">
            <div class="banner-area">
                <img src="~/assets/img/vacation.svg" alt="" class="left-image">
                <div class="content-box">
                    <h1 class="fw-700 lightest-black">Ucus <br class="title-break"> Durumu</h1>
                </div>
                <img src="~/assets/img/plane.svg" alt="" class="right-image">
            </div>
        </div>
    </div>
</div>
<!-- Title-Banner End -->

<!-- Main Content Start -->
<div class="page-content m-0">
    <section class="flight-listing p-40">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Model.ErrorMessage
                        </div>
                    }

                    @if (Model.Flights != null && Model.Flights.Any())
                    {
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Flight Results</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Ucus No</th>
                                                <th>Havayolu</th>
                                                <th>Kalkis</th>
                                                <th>Varis</th>
                                                <th>Tarih</th>
                                                <th>Durum</th>
                                                <th>Fiyat</th>
                                                <th>Islem</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var flight in Model.Flights)
                                            {
                                                <tr>
                                                    <td><strong>@flight.FlightNumber</strong></td>
                                                    <td>@flight.AirlineName</td>
                                                    <td>@(flight.DepartureAirport?.City ?? flight.DepartureAirportCode ?? "-")</td>
                                                    <td>@(flight.ArrivalAirport?.City ?? flight.ArrivalAirportCode ?? "-")</td>
                                                    <td>@flight.ScheduledDeparture.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>
                                                        @if (flight.ScheduledDeparture > DateTime.Now)
                                                        {
                                                            <span class="badge bg-success">On Time</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Gecmis</span>
                                                        }
                                                    </td>
                                                    <td>@CurrencyHelper.FormatPriceInSelectedCurrency(flight.BasePriceAmount, flight.Currency ?? "TRY", ViewBag.SelectedCurrency as string ?? "TRY")</td>
                                                    <td>
                                                        <a asp-controller="Flight" asp-action="Listing" 
                                                           asp-route-fromCity="@(flight.DepartureAirport?.City ?? flight.DepartureAirportCode)"
                                                           asp-route-toCity="@(flight.ArrivalAirport?.City ?? flight.ArrivalAirportCode)"
                                                           asp-route-departureDate="@flight.ScheduledDeparture.ToString("yyyy-MM-dd")"
                                                           class="btn btn-sm btn-primary">
                                                            <i class="fas fa-ticket-alt"></i> Make Reservation
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model.FlightNumber) || (!string.IsNullOrEmpty(Model.FromCity) && !string.IsNullOrEmpty(Model.ToCity)))
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No flights found matching your search criteria.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-search me-2"></i>
                            Use the search form above to query flight status.
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Main Content End -->
